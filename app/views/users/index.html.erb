<% if @book.errors.any? %>
    <%= @book.errors.count %>errors
     <ul>
        <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
        <% end %>
     </ul>
<% end %>
<h1>User info</h1>
<table>
  <tbody>

    <tr><%= image_tag current_user.get_profile_image(100,100) %></tr>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>introduction</tr>
    <tr><%= current_user.introduction %></tr>
  </tbody>
</table>
<p><%= link_to "edit user", edit_user_path(current_user) %></p>
<h1>New Book</h1>
<%= form_with model: @bookn, local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Opinion</p>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <td>image</td>
      <td>name</td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(50,50) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>