<div class="container">
<div class="row py-3">
<%= render 'books/list', book: @book, user: current_user %>
<div class="col-md-8">
<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <td>image</td>
      <td>name</td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(50,50) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>