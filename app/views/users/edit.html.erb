<div class="container">
<div class="row">
  <div class="col-mx-auto py-3 offset-md-1">
    <h1>User info</h1>

    <% if @user.errors.any? %>
      <%= @user.errors.count %>errors
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @user, local:true do |f| %>
<div class="pb-4">
    <p>Name</p>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
</div>

<div class="pb-4">
    <p>Image</p>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
</div>

<div>
    <p>Introduction</p>
    <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文" %>
</div>

<div>
    <%= f.submit "Update User", class: "btn btn-sm btn-secondary" %>
    <% end %>
</div>
  </div>
</div>
</div>