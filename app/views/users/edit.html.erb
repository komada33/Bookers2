<h1>User info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, local:true do |f| %>

<p>Name</p>
<%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>

<p>Image</p>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

<p>Introduction</p>
<%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文" %>

<%= f.submit "Update User" %>
<% end %>