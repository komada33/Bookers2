<div class="col-md-3">

<% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>

<table class="table">
  <tbody>

    <tr><%= image_tag user.get_profile_image(100,100) %></tr>
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>


<%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block", method: :get do %>
<i class="fas fa-user-cog"></i>
<% end %>

<div>
<h1>New book</h1>
<%= form_with model: book, local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 </div>
 <div>
 <p>Opinion</p>
 <%= f.text_area :body %>
 </div>
 <div>
 <%= f.submit "Create Book", class: "btn btn-sm btn-success" %>
<% end %>
</div>

</div>