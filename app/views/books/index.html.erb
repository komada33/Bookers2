<% if @book.errors.any? %>
    <%= @book.errors.count %>errors
     <ul>
        <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
        <% end %>
     </ul>
<% end %>
<h1>User info</h1>

<table>
  <tbody>

    <tr><%= image_tag current_user.get_profile_image(100,100) %></tr>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>introduction</tr>
    <tr><%= current_user.introduction %></tr>
  </tbody>
</table>
<p><%= link_to "edit user", edit_user_path(current_user) %></p>
<h1>New Book</h1>
<%= form_with model: @bookn, local:true do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 <p>Opinion</p>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>opinion</td>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to image_tag book.user.get_profile_image(50,50) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>

