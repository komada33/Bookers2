
<%= render 'books/list', book: @book, user: current_user %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>opinion</td>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to image_tag book.user.get_profile_image(50,50) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>

