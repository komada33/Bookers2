<div class="container">
<div class="row">
<div class="col-mx-auto py-3 offset-md-1">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, method: :patch, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>

<p>Opinion</p>
<%= f.text_area :body %>

<div>
<%= f.submit "Update Book", class: "btn btn-sm btn-success" %>
<% end %>
</div>

  <p>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
  </p>
</div>
</div>
</div>